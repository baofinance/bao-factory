{
  "name": "bao-factory",
  "description": "A predictable address deployer",
  "license": "MIT",
  "scripts": {
    "upgrade:yarn": "yarn set version stable",
    "upgrade": "[ $# -gt 0 ] && yarn up \"${0}\"; [ $# -eq 0 ] && yarn up \"*\"",
    "clean": "forge clean; forge cache clean",
    "extract": "./script/bao-factory --extract",
    "prettier": "prettier ${0} --log-level warn --ignore-path .gitignore \"{src,test,interfaces,script}/**/*.sol\"",
    "fmt:check": "yarn prettier --check",
    "fmt": "yarn prettier --write",
    "lint": "solhint --max-warnings 0 '{src,interfaces}/**/*.sol' --disc && forge lint",
    "lint:test": "solhint --max-warnings 0 'test/**/*.sol' --config .solhint-test.json --disc",
    "slither": "uv run slither .  --exclude-dependencies --fail-pedantic --skip-clean",
    "test": "forge test --summary",
    "coverage": "forge coverage --report lcov --report summary",
    "pre-checkin": "yarn fmt && yarn slither && yarn lint && yarn lint:test && yarn test && yarn coverage && echo \"ready for checkin\""
  },
  "dependencies": {
    "prettier": "^3.7.4",
    "prettier-plugin-solidity": "^2.2.0",
    "solhint": "^6.0.1"
  },
  "packageManager": "yarn@4.12.0"
}
